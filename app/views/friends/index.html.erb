
<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="table-dark">
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User ID</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td>
            <%= link_to friend.first_name + " " + friend.last_name, friend  %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user.id %></td>

        <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr> 
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>

<% else %>
  <h1>This is home page</h1>
<% end %>
